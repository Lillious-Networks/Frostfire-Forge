{
  "name": "frostfire-forge",
  "module": "./src/webserver/server.ts",
  "dependencies": {
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "sharp": "^0.33.5",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bun": "^1.3.1",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^22.18.13",
    "@types/nodemailer": "^7.0.3",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "typescript-eslint": "^8.46.2"
  },
  "scripts": {
    "production": "bun transpile-production && bun --env-file=.env.production ./src/webserver/server.ts",
    "transpile-development": "bun --env-file=.env.development ./src/utility/transpiler.ts",
    "transpile-production": "bun --env-file=.env.production ./src/utility/transpiler.ts",
    "development": "bun transpile-development && bun --inspect --env-file=.env.development ./src/webserver/server.ts",
    "setup": "bun --env-file=.env.production ./src/utility/database_setup.ts",
    "setup-sqlite": "bun --env-file=.env.development ./src/utility/database_setup_sqlite.ts",
    "docs": "bun ./src/utility/generate_docs.ts",
    "create-config": "bun ./src/utility/create_config.ts",
    "setup-development": "bun create-config && bun setup-sqlite",
    "setup-production": "bun create-config && bun setup",
    "start-client": "cd ./Frostfire-Forge-Client && npm i && npm start",
    "package-client": "cd ./Frostfire-Forge-Client && npm i && npm run package",
    "service:start": "./src/utility/start-service.sh",
    "service:stop": "./src/utility/stop-service.sh",
    "service:restart": "sudo systemctl restart frostfire-forge-production",
    "service:status": "systemctl status frostfire-forge-production --no-pager",
    "service:logs": "journalctl -u frostfire-forge-production -f",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
    "docker:dev:rebuild": "docker compose -f docker-compose.dev.yml up -d --build --force-recreate",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build",
    "docker:prod:rebuild": "docker compose -f docker-compose.prod.yml up -d --build --force-recreate"
  },
  "type": "module"
}
